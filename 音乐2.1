-- 添加圆角效果的函数
local function ApplyRoundedCorners(uiElement, cornerRadius)
    local uiCorner = Instance.new("UICorner")
    uiCorner.CornerRadius = UDim.new(0, cornerRadius or 8)
    uiCorner.Parent = uiElement
    return uiCorner
end

-- 优化后的辉光效果函数 - 更加细腻的辉光效果
local function ApplyEnhancedGlowEffect(uiElement, elementType)
    -- 基础描边
    local baseStroke = Instance.new("UIStroke")
    baseStroke.ApplyStrokeMode = Enum.ApplyStrokeMode.Border
    baseStroke.Color = Color3.fromRGB(0, 0, 0)
    baseStroke.Transparency = 0.8
    baseStroke.Thickness = 1
    baseStroke.Parent = uiElement

    -- 根据元素类型应用不同的辉光效果
    if elementType == "mainFrame" then
        -- 主框架：四层细腻辉光效果，优化过渡
        local innerGlow = Instance.new("UIStroke")
        innerGlow.ApplyStrokeMode = Enum.ApplyStrokeMode.Border
        innerGlow.Color = Color3.fromRGB(95, 45, 135)  -- 调整颜色过渡更平滑
        innerGlow.Transparency = 0.78
        innerGlow.Thickness = 2.5  -- 减小厚度
        innerGlow.Parent = uiElement
        
        local midInnerGlow = Instance.new("UIStroke")
        midInnerGlow.ApplyStrokeMode = Enum.ApplyStrokeMode.Border
        midInnerGlow.Color = Color3.fromRGB(125, 65, 185)   -- 中间色调更接近
        midInnerGlow.Transparency = 0.82
        midInnerGlow.Thickness = 4.5  -- 减小厚度
        midInnerGlow.Parent = uiElement
        
        local midOuterGlow = Instance.new("UIStroke")
        midOuterGlow.ApplyStrokeMode = Enum.ApplyStrokeMode.Border
        midOuterGlow.Color = Color3.fromRGB(150, 85, 210)  -- 亮紫色，色调更统一
        midOuterGlow.Transparency = 0.86
        midOuterGlow.Thickness = 6.5  -- 减小厚度
        midOuterGlow.Parent = uiElement
        
        local outerGlow = Instance.new("UIStroke")
        outerGlow.ApplyStrokeMode = Enum.ApplyStrokeMode.Border
        outerGlow.Color = Color3.fromRGB(170, 105, 230)  -- 最外层，更淡的紫色
        outerGlow.Transparency = 0.90  -- 提高透明度使过渡更自然
        outerGlow.Thickness = 8.5  -- 减小厚度
        outerGlow.Parent = uiElement
        
        return {innerGlow, midInnerGlow, midOuterGlow, outerGlow}
    else
        -- 内部元素（输入框、按钮等）：单层薄辉光
        local elementGlow = Instance.new("UIStroke")
        elementGlow.ApplyStrokeMode = Enum.ApplyStrokeMode.Border
        elementGlow.Color = Color3.fromRGB(100, 50, 160)
        elementGlow.Transparency = 0.85
        elementGlow.Thickness = 1.5
        elementGlow.Parent = uiElement
        
        return elementGlow
    end
end

