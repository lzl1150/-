-- ================== 新增：增强型拖动处理器 ==================
local function CreateEnhancedDragHandler(draggableFrame, handleArea)
    local dragActive = false
    local dragStart = Vector2.new()
    local frameStart = UDim2.new()
    
    -- 通用的输入开始处理
    local function onInputBegan(input)
        if input.UserInputType == Enum.UserInputType.MouseButton1 or 
           input.UserInputType == Enum.UserInputType.Touch then
            
            dragActive = true
            dragStart = input.Position
            frameStart = draggableFrame.Position
            
            -- 为触摸输入启用捕获，防止拖拽时失去焦点[5](@ref)
            if input.UserInputType == Enum.UserInputType.Touch then
                input:Capture()
            end
            
            -- 视觉反馈：拖动开始时轻微改变透明度
            draggableFrame.BackgroundTransparency = 0.1
        end
    end
    
    -- 通用的输入改变处理
    local function onInputChanged(input)
        if dragActive then
            local currentPos = input.UserInputType == Enum.UserInputType.Touch and 
                             input.Position or userInput:GetMouseLocation()
            local delta = currentPos - dragStart
            
            -- 平滑更新位置，无边界限制[5](@ref)
            draggableFrame.Position = UDim2.new(
                frameStart.X.Scale, frameStart.X.Offset + delta.X,
                frameStart.Y.Scale, frameStart.Y.Offset + delta.Y
            )
        end
    end
    
    -- 通用的输入结束处理
    local function onInputEnded(input)
        if dragActive then
            dragActive = false
            -- 恢复透明度
            draggableFrame.BackgroundTransparency = 0
        end
    end
    
    -- 将事件连接到指定的拖动手柄区域[4](@ref)
    handleArea.InputBegan:Connect(onInputBegan)
    handleArea.InputChanged:Connect(onInputChanged)
    handleArea.InputEnded:Connect(onInputEnded)
    
    -- 返回一个控制接口，以便需要时扩展
    return {
        SetEnabled = function(enabled)
            dragActive = enabled and dragActive
        end
    }
end
-- ================== 增强型拖动处理器结束 ==================

