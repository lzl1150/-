-- 修改点：将高光效果改为紫色辉光效果
local function ApplyEnhancedShadowEffect(uiElement, isMainFrame)
    -- 基础描边（保持原有半透明效果）
    local baseStroke = Instance.new("UIStroke")
    baseStroke.ApplyStrokeMode = Enum.ApplyStrokeMode.Border
    baseStroke.Color = Color3.fromRGB(0, 0, 0)
    baseStroke.Transparency = 0.8
    baseStroke.Thickness = 2
    baseStroke.Parent = uiElement

    -- 仅为mainFrame添加高级紫色辉光效果
    if isMainFrame then
        -- 内层辉光：深紫色基础
        local innerGlow = Instance.new("UIStroke")
        innerGlow.ApplyStrokeMode = Enum.ApplyStrokeMode.Border
        innerGlow.Color = Color3.fromRGB(70, 0, 110)  -- 深紫色
        innerGlow.Transparency = 0.7
        innerGlow.Thickness = 4
        innerGlow.Parent = uiElement
        
        -- 中层辉光：中等紫色
        local midGlow = Instance.new("UIStroke")
        midGlow.ApplyStrokeMode = Enum.ApplyStrokeMode.Border
        midGlow.Color = Color3.fromRGB(120, 0, 200)   -- 中紫色
        midGlow.Transparency = 0.8
        midGlow.Thickness = 6
        midGlow.Parent = uiElement
        
        -- 外层辉光：亮紫色外晕
        local outerGlow = Instance.new("UIStroke")
        outerGlow.ApplyStrokeMode = Enum.ApplyStrokeMode.Border
        outerGlow.Color = Color3.fromRGB(180, 80, 255)  -- 亮紫色
        outerGlow.Transparency = 0.85
        outerGlow.Thickness = 8
        outerGlow.Parent = uiElement
        
        -- 存储辉光引用以便后续控制
        uiElement:SetAttribute("InnerGlow", innerGlow)
        uiElement:SetAttribute("MidGlow", midGlow)
        uiElement:SetAttribute("OuterGlow", outerGlow)
        
        return {innerGlow, midGlow, outerGlow}
    end
    
    return baseStroke
end

-- 修改点：更新陀螺仪控制器以处理多层辉光效果
local GyroHighlightController = {
    Enabled = false,
    Sensitivity = 0.4,
    MaxTiltEffect = 0.3,
    CurrentTilt = Vector2.new(0, 0),
    TargetTilt = Vector2.new(0, 0)
}

function GyroHighlightController:Initialize()
    if userInputService.GyroEnabled then
        self.Enabled = true
    else
        self.Enabled = false
    end
    return self.Enabled
end

function GyroHighlightController:GetTiltData()
    if self.Enabled then
        local gyroState = userInputService:GetGyroState()
        if gyroState then
            return Vector2.new(
                math.clamp(gyroState.Rotation.X * self.Sensitivity, -1, 1),
                math.clamp(gyroState.Rotation.Y * self.Sensitivity, -1, 1)
            )
        end
    end
    
    -- 模拟模式：使用鼠标位置
    local mousePos = userInputService:GetMouseLocation()
    local screenSize = workspace.CurrentCamera.ViewportSize
    local center = screenSize / 2
    local relativePos = (mousePos - center) / center
    
    return Vector2.new(relativePos.X, relativePos.Y)
end

-- 修改点：更新辉光效果函数，处理多层辉光
function GyroHighlightController:UpdateHighlightEffect(uiElement)
    if not uiElement then return end
    
    -- 获取所有辉光层
    local innerGlow = uiElement:GetAttribute("InnerGlow")
    local midGlow = uiElement:GetAttribute("MidGlow")
    local outerGlow = uiElement:GetAttribute("OuterGlow")
    
    if not innerGlow or not midGlow or not outerGlow then return end
    
    -- 获取倾斜数据并平滑过渡
    self.TargetTilt = self:GetTiltData()
    self.CurrentTilt = self.CurrentTilt:Lerp(self.TargetTilt, 0.1)
    
    -- 计算倾斜强度
    local tiltIntensity = math.abs(self.CurrentTilt.X) + math.abs(self.CurrentTilt.Y)
    
    -- 根据倾斜度动态调整多层辉光效果
    local dynamicFactor = tiltIntensity * self.MaxTiltEffect
    
    -- 内层辉光调整：变化较小，保持基础效果
    innerGlow.Transparency = 0.7 - (dynamicFactor * 0.1)
    innerGlow.Thickness = 4 + (dynamicFactor * 1)
    
    -- 中层辉光调整：中等变化
    midGlow.Transparency = 0.8 - (dynamicFactor * 0.15)
    midGlow.Thickness = 6 + (dynamicFactor * 1.5)
    
    -- 外层辉光调整：变化最明显，创造动态感
    outerGlow.Transparency = 0.85 - (dynamicFactor * 0.2)
    outerGlow.Thickness = 8 + (dynamicFactor * 2)
end

