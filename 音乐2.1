    local SimpleGlowController = {
        Enabled = false,
        Sensitivity = 0.3, -- 降低灵敏度
        MaxOffset = 20, -- 减少最大偏移量
        CurrentTilt = Vector2.new(0, 0),
        TargetTilt = Vector2.new(0, 0)
    }

    function SimpleGlowController:Initialize()
        if userInputService.GyroEnabled then
            self.Enabled = true
        else
            self.Enabled = false
        end
        return self.Enabled
    end

    function SimpleGlowController:GetGyroData()
        if self.Enabled then
            local gyroState = userInputService:GetGyroState()
            if gyroState then
                return Vector2.new(
                    math.clamp(gyroState.Rotation.X * self.Sensitivity, -self.MaxOffset, self.MaxOffset),
                    math.clamp(gyroState.Rotation.Y * self.Sensitivity, -self.MaxOffset, self.MaxOffset)
                )
            end
        end
        
        -- 模拟模式
        local mousePos = userInputService:GetMouseLocation()
        local screenSize = workspace.CurrentCamera.ViewportSize
        local center = screenSize / 2
        local relativePos = (mousePos - center) / center
        
        return Vector2.new(
            relativePos.X * self.MaxOffset,
            relativePos.Y * self.MaxOffset
        )
    end

    function SimpleGlowController:UpdateGlowEffect(uiElement)
        if not uiElement then return end
        
        local glowEffect = uiElement:GetAttribute("GlowEffect")
        if not glowEffect then return end
        
        -- 获取陀螺仪数据并平滑过渡
        self.TargetTilt = self:GetGyroData()
        self.CurrentTilt = self.CurrentTilt:Lerp(self.TargetTilt, 0.1)
        
        -- 计算倾斜强度
        local tiltStrength = self.CurrentTilt.Magnitude / self.MaxOffset
        
        -- 简化的高光效果：仅调整透明度和厚度
        local glowTransparency = 0.8 - (tiltStrength * 0.3)
        local glowThickness = 2 + (tiltStrength * 2)
        
        -- 应用效果：保持纯白色，只调整透明度和厚度
        glowEffect.Transparency = glowTransparency
        glowEffect.Thickness = glowThickness
    end

