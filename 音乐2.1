-- 添加圆角效果的函数
local function ApplyRoundedCorners(uiElement, cornerRadius)
    local uiCorner = Instance.new("UICorner")
    uiCorner.CornerRadius = UDim.new(0, cornerRadius or 8)
    uiCorner.Parent = uiElement
    return uiCorner
end

-- 简化的描边效果函数 - 专注于高光效果
local function ApplySimpleGlowEffect(uiElement, isMainFrame)
    local uiStroke = Instance.new("UIStroke")
    uiStroke.ApplyStrokeMode = Enum.ApplyStrokeMode.Border
    uiStroke.Color = Color3.fromRGB(255, 255, 255) -- 纯白色高光
    uiStroke.Transparency = 0.9 -- 高透明度实现柔和效果
    uiStroke.Thickness = 2
    uiStroke.Parent = uiElement
    
    -- 仅为主框架添加动态高光效果
    if isMainFrame then
        local glowEffect = Instance.new("UIStroke")
        glowEffect.ApplyStrokeMode = Enum.ApplyStrokeMode.Border
        glowEffect.Color = Color3.fromRGB(255, 255, 255) -- 纯白色高光
        glowEffect.Transparency = 0.8
        glowEffect.Thickness = 3
        glowEffect.Parent = uiElement
        uiElement:SetAttribute("GlowEffect", glowEffect)
    end
    
    return uiStroke
end

